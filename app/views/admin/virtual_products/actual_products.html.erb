<%# 加已有的产品或者新建，新建就去走一遍新建流程 %>

<div class="page-header">
  <div class="pull-right">
    <%= link_to t('admin.add'), products_admin_virtual_product_path(@product), remote: true, class: 'btn btn-success'%>
    <%= link_to t('admin.new'), new_admin_product_path, class: 'btn btn-primary'%>
  </div>
  <h1>Manager Actual Product</h1>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Price</th>
            <th>Display</th>
            <th>Sku</th>
            <th>Purchase Price</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @product.actual_products.each do |actual_product| %>
            <tr>
              <th scope="row"><%= actual_product.id %></th>
              <th><%= actual_product.name %></th>
              <td><%= actual_product.price %></td>
              <td><%= actual_product.active %></td>
              <td><%= actual_product.sku %></td>
              <td><%= actual_product.purchase_price %></td>

              <td>
                <%= link_to edit_admin_product_path(actual_product.id) do %>
                  <span class="glyphicon glyphicon-pencil"  aria-hidden="true"></span>
                <% end %>
                <%= link_to "#" do %>
                  <span class="glyphicon glyphicon-trash"  aria-hidden="true"></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>