<div class="page-header">
  <div class="pull-right">
    <%= link_to '新增套餐', new_admin_virtual_product_path, class: 'btn btn-primary' %>
  </div>
  <h1>套餐管理</h1>
</div>

</br>
<!-- search form -->
<%= form_tag(admin_products_path, method: :get) do %>
  <div class="row">
    <div class="col-md-3 col-md-offset-6">
      <%= text_field_tag :q, params[:q], class: "form-control" %>
    </div>
    <div class="col-md-3">
      <pull class="pull-right">
      <%= submit_tag '搜索', class: 'btn btn-primary' %>
      <%= link_to '重置', admin_virtual_products_path, class: 'btn btn-default' %>
      </pull>
    </div>
  </div>
<% end %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>名称</th>
        <th>价格</th>
        <th>采购价格</th>
        <th>是否显示</th>
        <th>SKU</th>
        <th>详情</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <th><%= product.id %></th>
          <th><%= product.name %></th>
          <td><%= product.price %></td>
          <td><%= product.purchase_price %></td>
          <td><%= product.active %></td>
          <td><%= product.sku %></td>
          <td>
            <%# if product.has_variant? %>
              <%# link_to product.variants.size, variants_admin_product_path(product.id) %>
            <%# end %>
          </td>
          <td>
            <%= link_to edit_admin_virtual_product_path(product.id) do %>
              <span class="glyphicon glyphicon-pencil"  aria-hidden="true"></span>
            <% end %>
            <%= link_to admin_virtual_product_path(product.id), method: :DELTE, "data-confirm" => "Are you cure?" do %>
              <span class="glyphicon glyphicon-trash"  aria-hidden="true"></span>
            <% end %>
          </td>
        </tr >
      <% end %>
    </tbody>
  </table>
</div>
<div class="pull-right">
  <%= paginate @products %>
</div>
