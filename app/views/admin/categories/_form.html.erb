<%= render 'shared/error_messages', object: f.object %>
<div class="form-group">
  <%= f.label :name, '名称' %>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
<div class="checkbox">
    <label>
      <%= f.check_box :active %> 是否显示
    </label>
  </div>
</div>

<div class="form-group">
  <%= f.label '选择分类级别' %>
  <%= f.select :parent_id,
    options_for_select((@category.parent_id ? [[@category.parent.name, @category.parent.id]] : []), @category.parent_id), {include_blank: false}, data: {path: category_admin_ajax_select_index_path(is_leaf: 0, not_in: @category.id)}, class: "form-control select2"  %>
</div>

<%= f.submit "保存", {class: "btn btn-primary"} %>
