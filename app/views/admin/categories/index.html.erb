<h1 class="page-header">类目管理</h1>

<div class="pull-right">
  <%= link_to '新建类目', new_admin_category_path, class: 'btn btn-primary' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>名称</th>
      <th>层级</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @categoires.each do |category| %>
      <tr>
        <td>
          <%= category.path.map(&:name).join(" > ") %>
        </td>
        <td>
          <%= category.level %>
        </td>
        <td>
          <%= link_to '编辑', edit_admin_category_path(category) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pull-right">
  <%= paginate @categoires %>
</div>

