
<h1 class="page-header">Edit Product</h1>

  <%= link_to admin_product_images_path(@product.id) do %>
          <span class="glyphicon glyphicon-pencil"  aria-hidden="true"></span>
        <% end %>

        <%= link_to variants_admin_product_path(@product.id) do %>
          <span class="glyphicon glyphicon-zoom-in"  aria-hidden="true"></span>
        <% end if @product.is_master? %>


<div class="container-fluid">




<%= render partial: "form", locals: {product: @product, url: @product.is_master? ? admin_product_path(@product.id) : update_variant_admin_product_path(@product.parent_id, @product.id), method: :PATCH} %>

</div>