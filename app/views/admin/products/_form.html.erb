<%= form_for(product, url: url, method: method) do |f| %>
  <div class="row">
    <div class="col-lg-6 col-sm-12">
      <div class="form-group">
        <%= f.label :name, '名称' %>
        <%= f.text_field :name, placeholder: "input name", value: product_name(product), class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :price, '销售价格' %>
        <%= f.number_field :price, min: 0.00, step: 0.05, placeholder: "input selling price",
          value: product_price(product), class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :weight, '重量' %>
        <%= f.number_field :weight, min: 0.00, step: 0.05, placeholder: "input selling price",
          value: product_weight(product), class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :display, '是否销售' %>
        <%= f.check_box :active %>
      </div>
    </div>
    <div class="col-lg-6 col-sm-12">
      <div class="form-group">
        <%= f.label :sku %>
        <%= f.text_field :sku, placeholder: "input product model", value: product_sku(product),class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :purchase_price, '采购价格' %>
        <%= f.number_field :purchase_price, min: 0.00, step: 0.05, placeholder: "input purchase price", value: product_purchase_price(product), class: "form-control" %>
      </div>
      <% if product.is_master? %>
        <div class="form-group">
          <%= f.label :category_id, '类目' %>
          <%= f.select :category_id, options_for_select(Category.leaves.map {|category| [category.name, category.id]}, product_category_id(product)), {include_blank: true}, class: "form-control" %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :product_detail_id, '商品信息模板' %>
        <%= f.select :product_detail_id, options_for_select(ProductDetail.all.map {|product_detail| [product_detail.name, product_detail.id]},
          product_product_detail_id(product)), {include_blank: true}, class: "form-control" %>
      </div>
    </div>

    <% if f.object.new_record? && f.object.is_a?(Variant) %>
      <%= render partial: "variant_form" %>
    <% elsif !f.object.new_record? && f.object.is_a?(Variant) %>
      <%= render partial: "edit_variant_form", locals: {variant: f.object} %>
    <% end %>
    <div class="space-6"></div>
    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label :description, '商品详细信息' %>
        <%= f.text_area :description, id: 'product-editor', placeholder: '已选择商品信息模板则无需填写' %>
      </div>
    </div>
  </div>

  <div class="space-6"></div>

  <div class="row">
    <div class="col-lg-11">
      <button type="submit" class="pull-right btn btn-primary">Submit</button>
    </div>
  </div>

<% end %>

<script>
var editor = new Simditor({
  textarea: $('#product-editor')
  //optional options
});
</script>
