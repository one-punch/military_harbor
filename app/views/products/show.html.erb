<ol class="breadcrumb">
  <li><a href="#">Home</a></li>
  <li><a href="#"><%= @product.category.parent.name %></a></li>
  <li><a href="#"><%= @product.category.name %></a></li>
  <li class="active"><%= @product.name %></li>
</ol>

<div class="row">
  <div class="col-md-3">
      <p class="lead">Categories</p>
      <%= render 'layouts/sidebar' %>
  </div>

  <div class="col-md-9">
      <div>
        <%= render partial: "images", locals: {product: @product} %>
      </div>

      <div class="row">
        <div class="col-lg-12 col-md-12">
          <h4 class="pull-right"><%= @product.currency_price %></h4>
          <h4><a href="#"><% @product.name %></a>
          </h4>
          <p><%= @product.description %></p>
        </div>
      </div>

      <% if @product.is_sku? || @product.has_variant? %>
        <%= render partial: "variant", locals: {product: @product.is_master? ? @product : @product.parent, selected: @product } %>
      <% end %>


      <div class="row">
        <div class="col-md-6">
          <a class="btn btn-primary btn-product"><span class="glyphicon glyphicon-plus"></span> Add To Cart</a>
        </div>
        <div class="col-md-6">
          <a href="#" class="btn btn-success btn-product"><span class="glyphicon glyphicon-shopping-cart"></span> Buy</a></div>
      </div>
  </div>

  </div>
</div>

