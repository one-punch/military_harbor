<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li class="active">Products</li>
</ol>

<div class="row">
  <div class="col-md-3">
    <%= render 'layouts/sidebar' %>
  </div>

  <div class="col-md-9">
    <% @products.each do |product| %>
      <div class="col-sm-4 col-lg-4 col-md-4">
        <%= render 'products/product', product: product %>
      </div>
    <% end %>
  </div>
</div>